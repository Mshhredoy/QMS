@model QmsApp.Models.ViewModels.ResetPasswordViewModel
@using QmsApp.Models;

@{
    ViewBag.Title = "Edit User";
}

<div class="row-fluid">
    <div class="span12">
        <div class="widget-box">
            <div class="widget-title">
                <span class="icon"><i class="icon-tasks"></i></span>
                <h5>Edit User</h5>
                <div class="buttons"><a href="@Url.Action("Index","User")" class="btn btn-mini btn-success"><i class="icon-cabinet"></i> User</a></div>
            </div>
            <div class="widget-content">

                @using (Html.BeginForm("EditUser", "User"))
                { 
                    @Html.HiddenFor(model=>model.UserId)
                    @Html.AntiForgeryToken()
                    <div class="control-group span6">
                        @Html.LabelFor(model => model.UserName)
                        <div class="controls">
                            @Html.TextBoxFor(model => model.UserName)
                            @Html.ValidationMessageFor(model => model.UserName)
                        </div>
                    </div>
                    <div class="control-group span6">
						               @Html.Label("Role")
						               <div class="controls">
						                   @Html.DropDownList("RoleId", null, "--Select--")
						                   @Html.ValidationMessageFor(model => model.RoleId)
						               </div>
						           </div>
                    <div class="control-group">
                        @Html.LabelFor(model => model.NewPassword)
                        <div class="controls">
                            @Html.TextBoxFor(model => model.NewPassword, new { @type = "password" })
                            @Html.ValidationMessageFor(model => model.NewPassword)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelFor(model => model.ConfirmPassword)
                        <div class="controls">
                            @Html.TextBoxFor(model => model.ConfirmPassword, new { @type = "password" })
                            @Html.ValidationMessageFor(model => model.ConfirmPassword)
                        </div>
                    </div>


                    <div class="form-actions">
                        <input type="submit" value="Change" class="btn btn-success">
                        @Html.ActionLink("Cancel", "Index", "User", null, new { @class = "btn btn-danger" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>
